@model client.Models.HomeViewModel

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://acihome.vn/uploads/15/tieu-chuan-biet-thu-5-sao-co-canh-quan-dep-gan-gui-voi-thien-nhien.jpg" class="d-block w-100" alt="First Slide">
        </div>
        <div class="carousel-item">
            <img src="https://acihome.vn/uploads/15/tieu-chuan-biet-thu-5-sao-co-canh-quan-dep-gan-gui-voi-thien-nhien.jpg" class="d-block w-100" alt="Second Slide">
        </div>
        <div class="carousel-item">
            <img src="https://acihome.vn/uploads/15/tieu-chuan-biet-thu-5-sao-co-canh-quan-dep-gan-gui-voi-thien-nhien.jpg" class="d-block w-100" alt="Third Slide">
        </div>
    </div>


    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<form method="post" style="background-color: blanchedalmond; position: relative">
    <div class="container">
        <div class="row p-0 py-3 mx-0">
            <div class="col rounded-3 d-flex form-group">
                <i class="bi bi-search me-2"></i>
                <input class="form-control"placeholder="Enter a destination or property" />
            </div>
        </div>
        <div class="row p-0 py-3 mx-0">
            <div class="col rounded-3">
                <label class="form-label">Check in</label>
                <div class="d-flex align-items-center">
                    <i class="bi bi-calendar me-2"></i>
                    <input class="form-control" asp-for="CheckIn" />
                </div>
            </div>
            <div class="col rounded-3">
                <label class="form-label">Check out</label>
                <div class="d-flex align-items-center">
                    <i class="bi bi-calendar me-2"></i>
                    <input class="form-control" asp-for="CheckOut" />
                </div>

            </div>

        </div>
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary mb-n7 btn-lg">
                Search
            </button>
        </div>
    </div>
    
</form>

@foreach (var hotel in Model.Hotels)
{
    <a class="text-decoration-none" asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id">
        <div class="card mt-5" style="width: 18rem;">
            <img src="@hotel.ImageUrl" class="card-img-top" style="background-color: #555; height: 180px;" alt="@hotel.Name">
            <div class="card-body">
                <h5 class="card-title">@hotel.Name</h5>
                <p class="card-text">@hotel.Description</p>

            </div>
        </div>
    </a>
    


}
