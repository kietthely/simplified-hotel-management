@model IEnumerable<Domain.Entities.Amenity>

<div class="container">
    <div class="row row-cols-3 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Description: @(item.Description)</p>
                        <p class="card-text">Applied to: @item.AmenityType</p>

                        <a asp-controller="Amenity" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update amenity</a>
                        <a asp-controller="Amenity" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete amenity</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
